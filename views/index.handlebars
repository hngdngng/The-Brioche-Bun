<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{this.id}} : {{this.burger_name}}
    <button class="eat-burger" data-id="{{this.id}}" data-newDevoured="{{devoured}}">Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{this.id}} : {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">
  <div class="form-group">
    <label for="addABurger">Add a Burger</label>
    <input type="text" id="newBurger">
  </div>
  <button type="submit" id="addBurger">Add Burger</button>
</form>
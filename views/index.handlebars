<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{this.id}} : {{this.burger_name}}
    <button class="eat-burger" data-id="{{this.id}}" data-newDevoured="{{devoured}}">Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{this.id}} : {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
<p>Name a burger you'd like to eat. Then click the 'Add Burger' button.</p>